%h3 
  Current Projects
  - if @terms.any?
    matching
    = @terms.to_sentence

%ul.project-index
  - @projects.each do |project|
    %li.project-node{ id: "project-#{project.to_param}" }
      = image_tag project.logo.url(:thumbnail), title: "#{project.title.titleize} logo", class: "header-image"
      = link_to project.title, project
.center
  - if user_signed_in?
    = link_to '+ Create New Project', new_project_path, class: "new-project-button"